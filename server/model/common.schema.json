{
  "$id": "http://datacase.org/schemas/common.json",
  "definitions" : {

    "FormatItem": {
      "type": "object",
      "required": ["name", "value"],
      "properties": {
        "name":         { "type": "string" },
        "value":        { "type": "string" }
      }
    },

    "Phase": {
      "type": "object",
      "required": ["name", "dataModel"],
      "properties": {
        "name":         { "type": "string" },
        "description":  { "type": "string" },
        "initial":      { "type": "boolean" },
        "dataModel":    { "type": "string" }
      }
    },

    "Entity": {
      "type": "object",
      "required": ["name", "attributes"],
      "properties": {
        "name": { 
          "type": "string" 
        },
        "description": { 
          "type": "string" 
        },
        "extends": { 
          "type": "string" 
        },
        "attributes": {
          "type": "array",
          "items": [{ "$ref": "#/definitions/Attribute" }]
        }      
      }
    },

    "State": {
      "type": "object",
      "required": ["transitions"],
      "properties": {
        "transitions": {
          "type": "array",
          "items": [{ "$ref": "#/definitions/Transition" }]
        }      
      }
    },

    "Attribute": {
      "type": "object",
      "required": ["name", "type"],
      "properties": {
        "name": { 
          "type": "string" 
        },
        "type": { 
          "type": "string" 
        }
      }
    },

    "Transition": {
      "type": "object",
      "required": ["name", "label", "from", "to", "url"],
      "properties": {
        "name": { 
          "type": "string" 
        },
        "label": { 
          "type": "string" 
        },
        "from": { 
          "type": "string" 
        },
        "to": { 
          "type": "string" 
        },
        "url": { 
          "type": "string" 
        }      
      }
    }

  }
}