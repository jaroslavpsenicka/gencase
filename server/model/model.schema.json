{
  "$id": "http://datacase.org/schemas/schema.json",
  "type": "object",
  "required": ["name", "entities", "phases"],
  "properties": {
    "name": {
      "type": "string"
    },
    "nameFormat": {
      "type": "string"
    },
    "descriptionFormat": {
      "type": "string"
    },
    "overviewFormat": {
      "type": "array",
      "items": [{ "$ref": "common.json#/definitions/FormatItem" }]
    },
    "detailFormat": {
      "type": "array",
      "items": [{ "$ref": "common.json#/definitions/FormatItem" }]
    },
    "entities": {
      "type": "array",
      "items": [{ "$ref": "common.json#/definitions/Entity"}]
   },
    "phases": {
      "type": "array",
      "items": [{ "$ref": "common.json#/definitions/Phase" }]
    }
  }
}